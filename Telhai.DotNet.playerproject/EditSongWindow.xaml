<Window x:Class="Telhai.DotNet.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Song Title:" FontWeight="Bold"/>
        <TextBox Grid.Row="1"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5,0,10"/>

        <!-- Artist + Album -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Artist:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding Artist}" Width="150"/>

            <TextBlock Text="Album:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBlock Text="{Binding Album}" Width="150"/>
        </StackPanel>

        <!-- Cover -->
        <Image Grid.Row="3"
               Source="{Binding CoverImage}"
               Height="140"
               Width="140"
               Stretch="Uniform"
               HorizontalAlignment="Left"/>

        <!-- Images List -->
        <ListBox x:Name="lstImages"
         Grid.Row="4"
         ItemsSource="{Binding ImagePaths}"
         Margin="0,10,0,10"/>


        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add Image"
                 Width="100"
                 Margin="5"
                 Click="AddImage_Click"/>
            <Button Content="Remove Image"
                 Width="110"
                 Margin="5"
                 Click="RemoveImage_Click"/>

            <Button Content="Save"
             Width="80"
             Margin="5"
             Click="Save_Click"/>

        </StackPanel>
    </Grid>
</Window>
